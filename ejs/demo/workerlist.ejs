<!DOCTYPE html>
<html>
<head>
    <% include ../inc/meta.ejs %>
    <title>orderlist</title> 
    <!--<link rel="stylesheet" href="static/pagescript/demo/workerlist/css/main.css">-->
    <link rel="stylesheet/less" href="<%= staticurl %>pagescript/demo/workerlist/less/main.less"/>
    <% include ../inc/lessconf.ejs %>
</head>
<body>
<div class="container">
    <% include template/header.ejs %>
	<div class="mod" id="workerlist">
        <% if( typeof(workerdata) !== 'undefined' && workerdata.length>0){ %>
		<table>
			<tr><td>员工编号</td><td>物料编号</td><td>耗时</td><td>质检</td></tr>
                <% for(var i=0;i<workerdata.length;i++){ %>
                    <% var classname = workerdata[i].status == 1 ? 'glyphicon-ok':'glyphicon-remove'; %>
                    <tr>
                        <td><a href="/workerdetail?id=<%= workerdata[i].uid %>"><%= workerdata[i].uid %></a></td>
                        <td><%= workerdata[i].mid %></td>
                        <td><%= workerdata[i].t %></td>
                        <td><i class="glyphicon <%= classname %>"></i></td>
                    </tr>
                <% } %>
		</table>
        <% } %>
	</div>
</div>
</body>
<% include ../inc/requireconf.ejs %>
<script defer src="<%= staticurl %>common/core/require.js" data-main="pagescript/demo/workerlist/js/main"></script>
</html>